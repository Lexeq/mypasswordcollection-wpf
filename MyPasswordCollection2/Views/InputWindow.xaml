<Window x:Class="MPC.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPC"
        mc:Ignorable="d"
        Title="{Binding Text}"
        Height="150"
        MaxHeight="200"
        Width="300"
        MaxWidth="350"
        FontSize="15"
        x:Name="main"
        SizeToContent="Height"
        FocusManager.FocusedElement="{Binding ElementName=passBox}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="BaseStyle"
               TargetType="FrameworkElement">

            <Setter Property="Margin"
                    Value="10,5"/>

            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>

        <Style TargetType="TextBlock"
               BasedOn="{StaticResource BaseStyle}"/>

        <Style TargetType="PasswordBox" 
               BasedOn="{StaticResource BaseStyle}"/>

        <Style TargetType="Button" 
               BasedOn="{StaticResource BaseStyle}"/>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid MaxHeight="100">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Enter password"/>

            <PasswordBox Grid.Column="1" 
                         VerticalAlignment="Center"
                         x:Name="passBox" 
                         TabIndex="0"/>

            <TextBlock Grid.Row="1"
                       Visibility="{Binding Path=PasswordConfirmationRequired, Converter={StaticResource BoolToVis}}"
                       Text="Confirm password"/>

            <PasswordBox Grid.Row="1" 
                         Grid.Column="1" 
                         VerticalAlignment="Center"
                         x:Name="confBox"
                         TabIndex="1"
                         Visibility="{Binding Path=PasswordConfirmationRequired, Converter={StaticResource BoolToVis}}"/>
        </Grid>

        <UniformGrid Grid.Row="1" Columns="2">
            <Button IsDefault="True"
                    Click="Button_Click"
                    Content="OK"
                    TabIndex="2"/>

            <Button IsCancel="True"                    
                    Content="Cancel"
                    TabIndex="3"/>
        </UniformGrid>
    </Grid>
</Window>
