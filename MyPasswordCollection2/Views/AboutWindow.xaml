<Window
    x:Class="MPC.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MPC.Views"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=system.windows.interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About"
    Height="180"
    MaxWidth="300"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Click" SourceObject="{Binding ElementName=okButton}">
            <local:CloseWindowTriggerAction DialogResult="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <TextBlock
            VerticalAlignment="Stretch"
            DockPanel.Dock="Top"
            Text="{Binding AboutText, Mode=OneTime}"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Button
            x:Name="okButton"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="OK"
            DockPanel.Dock="Bottom"
            IsCancel="True"
            IsDefault="True" >
        </Button>
    </DockPanel>
</Window>
