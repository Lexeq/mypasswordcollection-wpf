<UserControl x:Class="MPC.PasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPC"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600">

    <Border Padding="10" Background="White">

        <Border.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVisible"/>
            <local:InverseBooleanConverter x:Key="ReverseBool"/>

            <Style TargetType="TextBox" x:Key="TextBoxBase" BasedOn="{StaticResource BaseControlStyle}">
                <Setter Property="IsReadOnly" Value="{Binding Path=EditMode, TargetNullValue=true, Converter={StaticResource ResourceKey=ReverseBool}}"/>
            </Style>

            <Style TargetType="local:PasswordTextBox" BasedOn="{StaticResource TextBoxBase}"/>
            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBase}"/>
            <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
        </Border.Resources>

        <Grid  Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" SharedSizeGroup="LeftColumn"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto" SharedSizeGroup="RightColumn"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0">Site</TextBlock>
                <TextBlock Grid.Row="1">Login</TextBlock>
                <TextBlock Grid.Row="2">Password</TextBlock>

                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=SelectedItem.Site}"></TextBox>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Path=SelectedItem.Login}"></TextBox>
                <local:PasswordTextBox Grid.Row="2" Grid.Column="1" 
                                       PlainText="{Binding Path=SelectedItem.Password}"
                                       UsePasswordChar="{Binding ElementName=ChbShowPassword, Path=IsChecked, Converter={StaticResource ReverseBool}}"></local:PasswordTextBox>

                <Button Grid.Row="0" Grid.Column="2">Copy</Button>
                <Button Grid.Row="1" Grid.Column="2">Copy</Button>
                <Button Grid.Row="2" Grid.Column="2">Copy</Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="LeftColumn"/>
                    <ColumnDefinition/>
                    <ColumnDefinition  SharedSizeGroup="RightColumn"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="2" Command="{Binding EditCommand}">Edit</Button>
                <DockPanel Grid.Column="1">
                    <UniformGrid DockPanel.Dock="Right" Rows="1" 
                                 Visibility="{Binding Path=EditMode, Converter={StaticResource BoolToVisible}}">
                        <Button DockPanel.Dock="Right"  Command="{Binding FinishAddingCommand}" >Save</Button>
                        <Button DockPanel.Dock="Right"  Command="{Binding CancelAddingCommand}">Cancel</Button>
                    </UniformGrid>
                    <CheckBox x:Name="ChbShowPassword" 
                              Margin="10,0" DockPanel.Dock="Left"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              Padding="5,3">Show passwords</CheckBox>
                </DockPanel>
            </Grid>
            
        </Grid>
    </Border>
</UserControl>
